{
  "name": "typescript-service-template",
  "author": "Nate Clark <n8@n8io.com>",
  "version": "1.0.0",
  "description": "A typescript service",
  "scripts": {
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "docker:up": "docker compose up --build --no-log-prefix --watch service",
    "docker:build": "docker build --no-cache -t typescript-service-template .",
    "lint": "npm run lint:style && npm run lint:types && npm run lint:dead-code && npm run lint:spelling && npm run lint:circular-dependencies",
    "lint:circular-dependencies": "madge --circular ./src/index.ts",
    "lint:dead-code": "knip",
    "lint:spelling": "cspell --quiet .",
    "lint:style": "biome check",
    "lint:types": "tsc --noEmit",
    "format": "biome check --write",
    "dev": "node --watch --env-file-if-exists=.env src/index.ts",
    "init": "lefthook install",
    "test": "vitest --coverage",
    "start": "node --env-file-if-exists=.env src/index.ts"
  },
  "engines": {
    "node": ">=22",
    "npm": ">=10"
  },
  "main": "index.ts",
  "keywords": [],
  "license": "UNLICENSED",
  "type": "module",
  "cspell": {
    "words": [
      "biomejs",
      "EDITMSG",
      "gids",
      "ilike",
      "isactive",
      "knip",
      "lefthook",
      "Monitorable",
      "transpiling",
      "unstub"
    ],
    "ignorePaths": [
      ".github",
      ".vscode",
      "node_modules",
      "dist",
      "coverage",
      "docker-compose.yml",
      "package*.json",
      "**/database/migrations/**"
    ]
  },
  "madge": {
    "layout": "twopi"
  },
  "validate-branch-name": {
    "pattern": "^(develop|candidate|main){1}$|^(?<type>feat|fix|hotfix|chore|test)[/](?<ticket>[A-Za-z]+-\\d+)(?<subject>(-[A-Za-z0-9]+)*)?$",
    "errorMsg": "The current branch name does not match the required pattern. E.g. feat/abc-123"
  },
  "dependencies": {
    "@hono/node-server": "^1",
    "@opentelemetry/auto-instrumentations-node": "^0",
    "@opentelemetry/sdk-metrics": "^2",
    "@opentelemetry/sdk-node": "^0",
    "@opentelemetry/sdk-trace-node": "^2",
    "drizzle-orm": "^0",
    "hono": "^4",
    "hono-pino": "^0",
    "pg": "^8",
    "pg-error-enum": "^1",
    "pino": "^9",
    "pino-pretty": "^13",
    "ulid": "^3",
    "zod": "^3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1",
    "@total-typescript/tsconfig": "^1",
    "@types/node": "^22",
    "@types/pg": "^8",
    "@vitest/coverage-v8": "^3",
    "cspell": "^8",
    "drizzle-kit": "^0",
    "knip": "^5",
    "lefthook": "^1",
    "madge": "^8",
    "tsc-files": "^1",
    "typescript": "^5",
    "validate-branch-name": "^1",
    "vitest": "^3"
  }
}
